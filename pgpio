#!/usr/bin/env bash
#
# pgp.io CLI helper

VERSION=0.1.0

if [ "$1" == "--help" ] || [ "$1" == "-h" ] ||
   [ "$1" == "--version" ] || [ "$1" == "-v" ]; then
  echo "pgp.io CLI helper $VERSION"
  echo
  echo "Usage:"
  echo
  echo "  Encrypt & Send"
  echo "  echo 'hello' | gpg -aesr '<recipient>' | pgpio"
  echo
  echo "  Receive & Decrypt"
  echo "  pgpio https://pgp.io/m/Jag61Hgz19L | gpg -d"
  echo
  exit 0
fi

# Receive
if [ $1 ]; then
  result=`curl -sSL "$1"`
  RETVAL=$?

  if [ $RETVAL -eq 0 ]; then
    echo "$result"
  fi
# Send
else
  result=`curl -sSfi --data-binary @- https://pgp.io/m/`
  RETVAL=$?

  if [ $RETVAL -eq 0 ]; then
    location=`echo "$result" | grep Location | awk '{print $2}'`
    echo "$location"
  fi
fi

